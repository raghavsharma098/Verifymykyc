<!-- Navigation and Dropdown Scripts -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize Bootstrap dropdowns
        var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
        var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
            return new bootstrap.Dropdown(dropdownToggleEl);
        });

        // Services dropdown specific handling
        const servicesDropdown = document.querySelector('li a[href="/services"]');
        const servicesSubmenu = document.querySelector('.submenu-grid');
        
        if (servicesDropdown && servicesSubmenu) {
            // Desktop hover behavior
            if (window.innerWidth > 991) {
                servicesDropdown.addEventListener('mouseenter', function() {
                    servicesSubmenu.style.display = 'block';
                });

                const servicesLi = servicesDropdown.closest('li');
                servicesLi.addEventListener('mouseleave', function() {
                    servicesSubmenu.style.display = 'none';
                });
            }

            // Mobile click behavior
            if (window.innerWidth <= 991) {
                servicesDropdown.addEventListener('click', function(e) {
                    e.preventDefault();
                    const isVisible = servicesSubmenu.style.display === 'block';
                    servicesSubmenu.style.display = isVisible ? 'none' : 'block';
                });
            }
        }

        // Mobile menu toggle
        const sidebarToggle = document.querySelector('.sidebar__toggle');
        const headerMiddle = document.querySelector('.header-middle');
        const offcanvasOverlay = document.querySelector('.offcanvas__overlay');
        const body = document.body;

        function toggleMenu() {
            headerMiddle.classList.toggle('active');
            body.classList.toggle('menu-open');
        }

        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                toggleMenu();
            });
        }

        if (offcanvasOverlay) {
            offcanvasOverlay.addEventListener('click', function() {
                toggleMenu();
            });
        }

        // Handle window resize for services dropdown
        window.addEventListener('resize', function() {
            if (window.innerWidth > 991) {
                // Reset mobile-specific styles
                if (servicesSubmenu) {
                    servicesSubmenu.style.display = '';
                }
            }
        });

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(e) {
            if (window.innerWidth <= 991) {
                if (!e.target.closest('li') && servicesSubmenu) {
                    servicesSubmenu.style.display = 'none';
                }
            }
        });

        // Mobile nav dropdown toggle
        var mobileDropdown = document.querySelector('.mobile-dropdown');
        var dropdownToggle = document.getElementById('mobileServicesToggle');
        var dropdownMenu = document.getElementById('mobileServicesMenu');
        
        if (mobileDropdown && dropdownToggle && dropdownMenu) {
            dropdownToggle.addEventListener('click', function(e) {
                e.preventDefault();
                mobileDropdown.classList.toggle('open');
            });
        }

        // Handle user dropdown
        const userDropdown = document.getElementById('userDropdown');
        const dropdownMenu = userDropdown?.nextElementSibling;
        
        if (userDropdown && dropdownMenu) {
            userDropdown.addEventListener('click', function(e) {
                if (window.innerWidth <= 991) {
                    e.preventDefault();
                    e.stopPropagation();
                    this.classList.toggle('show');
                    dropdownMenu.classList.toggle('show');
                }
            });

            // Close user dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (window.innerWidth <= 991) {
                    if (!userDropdown.contains(e.target) && !dropdownMenu.contains(e.target)) {
                        userDropdown.classList.remove('show');
                        dropdownMenu.classList.remove('show');
                    }
                }
            });
        }
    });
</script>
