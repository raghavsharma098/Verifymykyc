            border-color: var(--primary-green) !important;
            color: #fff !important;
            box-shadow: 0 2px 8px 0 rgba(16, 198, 16, 0.15);
            transition: background 0.2s, border 0.2s;
        }

        .theme-btn:hover,
        .theme-btn:focus {
            background: var(--primary-blue) !important;
            border-color: var(--primary-blue) !important;
            color: #fff !important;
        }

