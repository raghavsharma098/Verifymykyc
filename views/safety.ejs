        :root {
            --primary-green: #10c610;
            --primary-blue: #1a79b3;
            --primary-orange: #ff5c16;
            --primary-dark: #0a2233;
            --primary-light: #f6f9fa;
        }

        .theme-btn {
            background: var(--primary-blue) !important;
            border-color: var(--primary-blue) !important;
            color: #fff !important;
            box-shadow: 0 2px 8px 0 rgba(16, 198, 16, 0.15);
            transition: background 0.2s, border 0.2s;
        }

        /* Buttons */
        .theme-btn,
        .theme-btn.style4,
        .theme-btn.style5 {
            background: var(--primary-blue) !important;
            border-color: var(--primary-green) !important;
            color: #fff !important;
            box-shadow: 0 2px 8px 0 rgba(16, 198, 16, 0.15);
            transition: background 0.2s, border 0.2s;
        }

        .theme-btn:hover,
        .theme-btn:focus {
            background: var(--primary-blue) !important;
            border-color: var(--primary-blue) !important;
            color: #fff !important;
        }

        .theme-btn.style2 {
            background: var(--primary-orange) !important;
            border-color: var(--primary-orange) !important;
            color: #fff !important;
        }

        /* Header */
        .header-section-33,
        #header-sticky.header-1.header-3 {
            background: white !important;
            border-bottom: 3px solid var(--primary-green);
        }

        .header-logo img {
            filter: drop-shadow(0 2px 8px rgba(26, 121, 179, 0.08));
        }

        /* Navigation links */
        .main-menu ul li a {
            color: #000 !important;
            font-weight: 500;
        }

        .main-menu ul li.active>a,
