            color: var(--primary-orange) !important;
        }

        /* Section Titles */
        .section-title .title,
        .single-section-title {
            color: var(--primary-blue) !important;
            font-weight: 700;
        }

        .section-title .subtitle,
        .single-section-title .subtitle {
            color: black !important;
            font-weight: 600;
        }

