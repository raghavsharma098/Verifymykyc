                        body: JSON.stringify({
                            service,
                            price,
                            quantity: 1
                        })
                    });
                    const data = await response.json();
                    if (data.success) {
                        // Create and show the enhanced alert
                        const alertDiv = document.createElement('div');
                        alertDiv.className = 'custom-alert';
                        alertDiv.innerHTML = `
                            <div class="alert-content">
                                <i class="fas fa-check-circle alert-icon"></i>
                                <span>${data.message}</span>
                            </div>
                            <button type="button" class="close-btn" onclick="this.parentElement.remove()">
                                <i class="fas fa-times"></i>
                            </button>
                        `;
                        document.body.appendChild(alertDiv);

                        // Remove the alert after 3 seconds with animation
                        setTimeout(() => {
                            alertDiv.style.animation = 'fadeOut 0.5s ease-out forwards';
                            setTimeout(() => {
                                alertDiv.remove();
                            }, 500);
                        }, 3000);

                        // Redirect to cart page after a short delay
                        setTimeout(() => {
                            window.location.href = '/cart';
                        }, 1000);
                    } else {
                        throw new Error(data.message);
                    }
                } catch (error) {
                    // Create and show error alert
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'custom-alert';
                    alertDiv.innerHTML = `
                        <div class="alert-content">
                            <i class="fas fa-exclamation-circle alert-icon"></i>
                            <span>${error.message}</span>
                        </div>
                        <button type="button" class="close-btn" onclick="this.parentElement.remove()">
                            <i class="fas fa-times"></i>
                        </button>
                    `;
                    document.body.appendChild(alertDiv);

                    // Remove the alert after 3 seconds with animation
                    setTimeout(() => {
                        alertDiv.style.animation = 'fadeOut 0.5s ease-out forwards';
                        setTimeout(() => {
                            alertDiv.remove();
                        }, 500);
                    }, 3000);
                }
            });
        });

        // Initialize all swipers with fixed navigation
        const swipers = {};
        const swiperConfigs = {
            identity: { 
                slidesPerView: 3, 
                spaceBetween: 20, 
                cardCount: 5
            },
            financial: { 
                slidesPerView: 3, 
                spaceBetween: 20, 
                cardCount: 5
            }
        };

        // Initialize each swiper with proper navigation
        Object.keys(swiperConfigs).forEach(section => {
            const config = swiperConfigs[section];
            if (config.cardCount >= 5) {
                const swiperElement = document.querySelector(`.${section}-swiper`);
                const prevBtn = swiperElement.querySelector('.swiper-prev');
                const nextBtn = swiperElement.querySelector('.swiper-next');

                const swiper = new Swiper(swiperElement, {
                    slidesPerView: config.slidesPerView,
                    spaceBetween: config.spaceBetween,
                    loop: true,
                    autoplay: {
                        delay: 3000,
                        disableOnInteraction: false,
                        pauseOnMouseEnter: true
                    },
                    breakpoints: {
                        320: {
                            slidesPerView: 1,
                            spaceBetween: 20
                        },
                        768: {
                            slidesPerView: 2,
                            spaceBetween: 20
                        },
                        1024: {
                            slidesPerView: config.slidesPerView,
                            spaceBetween: 20
                        }
                    },
                    on: {
                        init: function() {
                            updateButtonStates(this);
                        },
                        slideChange: function() {
                            updateButtonStates(this);
                        },
                        resize: function() {
                            updateButtonStates(this);
                        }
                    }
                });

                // Function to update button states
                function updateButtonStates(swiperInstance) {
                    // For loop mode, we don't need to disable buttons
                    prevBtn.style.opacity = '1';
                    nextBtn.style.opacity = '1';
                    prevBtn.style.cursor = 'pointer';
                    nextBtn.style.cursor = 'pointer';
                }

                // Add click event listeners
                prevBtn.addEventListener('click', () => {
                    swiper.slidePrev();
                    // Pause autoplay briefly when manually navigating
                    swiper.autoplay.stop();
                    setTimeout(() => {
                        swiper.autoplay.start();
                    }, 3000);
                });

                nextBtn.addEventListener('click', () => {
                    swiper.slideNext();
                    // Pause autoplay briefly when manually navigating
                    swiper.autoplay.stop();
                    setTimeout(() => {
                        swiper.autoplay.start();
                    }, 3000);
                });

                // Store swiper instance
                swipers[section] = swiper;

                // Add touch event handling for mobile
                let touchStartX = 0;
                let touchEndX = 0;

                swiperElement.addEventListener('touchstart', (e) => {
                    touchStartX = e.changedTouches[0].screenX;
                }, { passive: true });

                swiperElement.addEventListener('touchend', (e) => {
                    touchEndX = e.changedTouches[0].screenX;
                    handleSwipe();
                }, { passive: true });

                function handleSwipe() {
                    const swipeThreshold = 50;
                    if (touchEndX < touchStartX - swipeThreshold) {
                        // Swipe left
                        swiper.slideNext();
                    } else if (touchEndX > touchStartX + swipeThreshold) {
                        // Swipe right
                        swiper.slidePrev();
                    }
                }
            }
        });

        // Update swiper on window resize with debounce
        let resizeTimer;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(() => {
                Object.values(swipers).forEach(swiper => {
                    swiper.update();
                    swiper.autoplay.start();
                });
            }, 250);
        });

        // Add hover pause functionality
        document.querySelectorAll('.swiper').forEach(swiperElement => {
            swiperElement.addEventListener('mouseenter', () => {
                const swiper = swipers[swiperElement.classList[1].split('-')[0]];
                if (swiper) {
                    swiper.autoplay.stop();
                }
            });

            swiperElement.addEventListener('mouseleave', () => {
                const swiper = swipers[swiperElement.classList[1].split('-')[0]];
                if (swiper) {
                    swiper.autoplay.start();
                }
            });
        });
    </script>
