    <style>
        :root {
            --primary-green: #10c610;
            --primary-blue: #1a79b3;
            --primary-orange: #ff5c16;
            --primary-dark: #0a2233;
            --primary-light: #f6f9fa;
        }
        
        body {
            background: var(--primary-light);
            font-family: 'Inter', sans-serif;
        }

        /* Hero Section Enhancement */
        .hero-section {
            background: linear-gradient(135deg, #ffffff 0%, #d0bfff 100%);
            color: #fff;
            padding: 100px 0 80px 0;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #fff;
            opacity: 0.1;
        }

        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }

        .hero-section p {
            font-size: 1.25rem;
            color: rgba(0, 0, 0, 0.9);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .hero-img {
            max-width: 100%;
            height: auto;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            transform: perspective(1000px) rotateY(-5deg);
            transition: transform 0.3s ease;
        }

        .hero-img:hover {
            transform: perspective(1000px) rotateY(0deg);
        }

        /* Service Categories */
        .category-header {
            text-align: center;
            margin-bottom: 4rem;
            position: relative;
        }

        .category-header .subtitle {
            color: var(--primary-blue);
            font-size: 1.1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 1rem;
            display: inline-block;
            padding: 0.5rem 1.5rem;
            background: rgba(26, 121, 179, 0.1);
            border-radius: 50px;
            position: relative;
        }

        .category-header .subtitle::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: var(--primary-blue);
            border-radius: 3px;
        }

        .category-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 1rem;
        }

        .category-header p {
            color: #666;
            font-size: 1.1rem;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Service Cards Enhancement */
        .service-section {
            padding: 100px 0;
            position: relative;
        }

        .service-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, 
                transparent 0%, 
                rgba(26, 121, 179, 0.2) 50%, 
                transparent 100%
            );
        }

        .service-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            height: 350px;
            display: flex;
            flex-direction: column;
            padding: 1.5rem;
            border: 1px solid rgba(26, 121, 179, 0.1);
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

        .service-card .icon {
            font-size: 2rem;
            color: var(--primary-blue);
            margin-bottom: 1rem;
        }

        .service-card .card-title {
            color: var(--primary-dark);
            font-weight: 600;
            font-size: 1.2rem;
            margin-bottom: 0.8rem;
        }

        .service-card .card-text {
            color: #666;
            font-size: 0.95rem;
            line-height: 1.5;
            margin-bottom: 1rem;
            flex-grow: 1;
        }

        .service-card .price {
            color: var(--primary-orange);
            font-weight: 600;
            font-size: 1.2rem;
            margin-top: auto;
            padding-top: 0.8rem;
            margin-bottom:10px
        }

        .service-card .btn {
            background: var(--primary-green);
            color: #fff;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            border: none;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            margin: 10px;
        }

        .service-card .btn:hover {
            background: var(--primary-blue);
            transform: translateY(-2px);
        }

        .service-card .btn i {
            font-size: 1.1rem;
        }

        .service-card .btn-secondary {
            background: var(--primary-blue);
        }

        .service-card .btn-secondary:hover {
            background: var(--primary-dark);
            color: white !important;
        }

        /* Section Backgrounds */
        .service-section.identity {
            background: linear-gradient(135deg, #f6f9fa 0%, #ffffff 100%);
        }

        .service-section.business {
            background: linear-gradient(135deg, #f0f7fa 0%, #ffffff 100%);
        }

        .service-section.health {
            background: linear-gradient(135deg, #f9f6fa 0%, #ffffff 100%);
        }

        /* CTA Section Enhancement */
        .cta-section {
            background: linear-gradient(135deg, var(--primary-orange) 0%, #ff7e3d 100%);
            color: #fff;
            padding: 80px 0;
            border-radius: 30px;
            margin: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .cta-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="20" height="20" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><rect width="1" height="1" fill="rgba(255,255,255,0.1)"/></svg>');
            opacity: 0.1;
        }

        .cta-section h2 {
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
        }

        .cta-section p {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 2rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-section .theme-btn {
            background: #fff;
            color: var(--primary-orange);
            font-weight: 700;
            padding: 1rem 2rem;
            border-radius: 50px;
            border: none;
            transition: all 0.3s ease;
            font-size: 1.1rem;
        }

        .cta-section .theme-btn:hover {
            background: var(--primary-dark);
            color: #fff;
            transform: translateY(-3px);
        }

        /* Responsive Design */
        @media (max-width: 991px) {
            .hero-section {
                padding: 60px 0;
            }

            .hero-section h1 {
                font-size: 2.5rem;
            }

            .category-header h2 {
                font-size: 2rem;
            }
        }

        @media (max-width: 767px) {
            .service-section {
                padding: 60px 0;
            }

            .hero-section h1 {
                font-size: 2rem;
            }

            .category-header h2 {
                font-size: 1.8rem;
            }

            .cta-section {
                padding: 60px 0;
                margin: 60px 0;
            }

            .cta-section h2 {
                font-size: 2rem;
            }
        }

        /* Add these styles to your existing style block */
        .custom-alert {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 9999;
            min-width: 300px;
            padding: 15px 20px;
            border-radius: 10px;
            background: linear-gradient(135deg, #2ecc71, #27ae60);
            color: white;
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(46, 204, 113, 0.2);
            display: flex;
            align-items: center;
            justify-content: space-between;
            animation: slideDown 0.5s ease-out forwards;
            border: none;
        }

        .custom-alert .alert-content {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .custom-alert .alert-icon {
            font-size: 1.2rem;
        }

        .custom-alert .close-btn {
            background: none;
            border: none;
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
            padding: 0;
            opacity: 0.8;
            transition: opacity 0.3s ease;
        }

        .custom-alert .close-btn:hover {
            opacity: 1;
        }

        @keyframes slideDown {
            0% {
                transform: translate(-50%, -100%);
                opacity: 0;
            }
            100% {
                transform: translate(-50%, 0);
                opacity: 1;
            }
        }

        @keyframes fadeOut {
            0% {
                transform: translate(-50%, 0);
                opacity: 1;
            }
            100% {
                transform: translate(-50%, -100%);
                opacity: 0;
            }
        }

        /* Swiper Customization - Simplified */
        .swiper {
            width: 100%;
            padding: 20px 0;
            position: relative;
        }

        .swiper-slide {
            height: auto;
        }

        /* Navigation Buttons */
        .swiper-nav-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .swiper-nav-btn {
            background: var(--primary-blue);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .swiper-nav-btn:hover {
            background: var(--primary-dark);
        }

        .swiper-nav-btn:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        .swiper-pagination {
            position: relative;
            margin-top: 1rem;
        }

        .swiper-pagination-bullet {
            background: var(--primary-blue);
            opacity: 0.5;
        }

        .swiper-pagination-bullet-active {
            opacity: 1;
        }

        /* Grid Card Enhancement */
        .row .service-card {
            height: 100%;
            margin-bottom: 0;
        }

        /* Update navigation button styles */
        .swiper-nav-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1rem;
            margin-top: 1.5rem;
            position: relative;
            z-index: 10;
        }

        .swiper-nav-btn {
            background: var(--primary-blue);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            z-index: 2;
        }

        .swiper-nav-btn:hover {
            background: var(--primary-dark);
            transform: scale(1.1);
        }

        .swiper-nav-btn:active {
            transform: scale(0.95);
        }

        .swiper-nav-btn i {
            font-size: 1rem;
            pointer-events: none;
        }

        /* Ensure buttons are clickable on mobile */
        @media (max-width: 768px) {
            .swiper-nav-btn {
                width: 45px;
                height: 45px;
            }

            .swiper-nav-btn i {
                font-size: 1.2rem;
            }
        }

        /* Prevent button overlap with cards */
        .swiper {
            padding-bottom: 60px;
        }
    </style>
</head>
