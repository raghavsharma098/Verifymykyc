            background: #2563eb;
            color: white;
            font-weight: 700;
            padding: 20px 24px;
            text-transform: capitalize;
            letter-spacing: 0.3px;
            font-size: 1rem;
            border: none;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
            position: relative;
        }

        .table th:first-child {
            border-radius: 12px 0 0 12px;
        }

        .table th:last-child {
            border-radius: 0 12px 12px 0;
        }

        .table td {
            padding: 20px 24px;
            vertical-align: middle;
            border: none;
            background: white;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .table tbody tr {
            background: transparent;
        }

        .table tbody tr td:first-child {
            border-radius: 12px 0 0 12px;
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
            font-weight: 700;
            color: #1e293b;
            border-left: 4px solid #2563eb;
            min-width: 200px;
        }

        .table tbody tr td:last-child {
            border-radius: 0 12px 12px 0;
            word-break: break-word;
            font-family: 'SF Mono', 'Monaco', 'Cascadia Code', monospace;
            font-size: 0.95rem;
            line-height: 1.7;
            color: #374151;
            background: #fefefe;
        }

        .table tbody tr:hover td {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }

        .table tbody tr:hover td:first-child {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            border-left-color: #1d4ed8;
        }

        .table tbody tr:hover td:last-child {
            background: #f8fafc;
        }

        /* Special styling for data formatting */
        .table td:last-child br {
            margin-bottom: 6px;
        }

        /* Add subtle animation delay for staggered effect */
        .table tbody tr:nth-child(1) td { transition-delay: 0.05s; }
        .table tbody tr:nth-child(2) td { transition-delay: 0.1s; }
        .table tbody tr:nth-child(3) td { transition-delay: 0.15s; }
        .table tbody tr:nth-child(4) td { transition-delay: 0.2s; }
        .table tbody tr:nth-child(5) td { transition-delay: 0.25s; }

        .info-card {
            background: #e6f4ea;
            border-radius: var(--radius);
            padding: 20px;
            margin-bottom: 24px;
        }

        .info-card h3 {
            color: var(--primary);
            font-size: 1.2rem;
            margin-bottom: 12px;
        }

        .info-card p {
            color: var(--muted);
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .otp-section {
            display: none;
            margin-top: 20px;
        }

        .otp-section.show {
            display: block;
        }

        .otp-input {
            letter-spacing: 8px;
            font-size: 20px;
            text-align: center;
        }

        .timer {
            text-align: center;
            margin: 10px 0;
            color: var(--muted);
        }

        .resend-otp {
            text-align: center;
            margin-top: 10px;
        }

        .resend-otp button {
            background: none;
            border: none;
            color: var(--primary);
            cursor: pointer;
            font-size: 14px;
        }

        .resend-otp button:disabled {
            color: var(--muted);
            cursor: not-allowed;
        }

        .loading-spinner {
            display: none;
            text-align: center;
            margin: 20px 0;
        }

        @media (max-width: 1100px) {
            .main {
                padding-left: 40px;
            }
            .sidebar {
                width: 80px;
                padding: 32px 0;
            }
            .sidebar .logo {
                font-size: 1.2rem;
                padding: 0 12px;
            }
            .sidebar a span, .sidebar .section-title {
                display: none;
            }
            .sidebar a {
                padding: 12px;
                justify-content: center;
            }
            .sidebar a i {
                margin: 0;
            }
        }

        @media (max-width: 700px) {
            .dashboard-container {
                flex-direction: column;
            }
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                flex-direction: row;
                overflow-x: auto;
                border-right: none;
                border-bottom: 1px solid var(--border);
                padding: 12px;
            }
            .sidebar .logo {
                margin-bottom: 0;
            }
            .sidebar nav {
                display: flex;
                gap: 12px;
            }
            .sidebar ul {
                display: flex;
                gap: 8px;
            }
            .sidebar li {
                margin-bottom: 0;
            }
            .sidebar .sidebar-section {
                margin-bottom: 0;
            }
            .sidebar .section-title {
                display: none;
            }
            .sidebar a {
                padding: 8px 16px;
                white-space: nowrap;
            }
            .main {
                padding: 18px;
            }
            .page-header {
                padding: 16px;
            }
            .page-header h1 {
                font-size: 1.5rem;
            }
            
            /* Mobile table adjustments */
            .table th:first-child,
            .table td:first-child {
                min-width: 120px;
            }
            
            .table td:last-child {
                font-size: 0.8rem;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <%- include('sidenav') %>

        <main class="main">
            <div class="page-header">
                <h1>Aadhar Card Verification</h1>
                <p class="subtitle">Verify your Aadhar details using OTP verification</p>
            </div>

            <div class="info-card">
                <h3><i class="fas fa-info-circle"></i> About Aadhar Verification</h3>
                <p>This service allows you to verify your Aadhar details using OTP verification. The process includes:</p>
                <ul>
                    <li>Entering your 12-digit Aadhar number</li>
                    <li>Receiving an OTP on your registered mobile number</li>
                    <li>Verifying your identity with the OTP</li>
                    <li>Viewing your verified Aadhar details</li>
                </ul>
                <p><strong>Note:</strong> This service requires explicit consent from the Aadhar holder for verification.</p>
            </div>

            <div class="form-card">
                <form id="aadharForm">
                    <div class="form-group mb-3">
                        <label for="aadharNumber" class="form-label">Aadhar Number</label>
                        <input type="text" class="form-control" id="aadharNumber" 
                               pattern="[0-9]{12}" 
                               placeholder="Enter 12-digit Aadhar number"
                               required>
                        <div class="form-text">Enter your 12-digit Aadhar number</div>
                    </div>
                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="consent" required>
                            <label class="form-check-label" for="consent">
                                I consent to verify my Aadhar details
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" id="sendOtpBtn">Send OTP</button>
                </form>

                <div class="loading-spinner" id="loadingSpinner">
                    <div class="spinner-border text-success" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Processing your request...</p>
                </div>

                <div class="otp-section" id="otpSection">
                    <div class="form-group mb-3">
                        <label for="otpInput" class="form-label">Enter OTP</label>
                        <input type="text" class="form-control otp-input" id="otpInput" 
                               pattern="[0-9]{6}" 
                               placeholder="Enter 6-digit OTP"
                               required>
                    </div>
                    <div class="timer" id="timer">Time remaining: 30s</div>
                    <div class="resend-otp">
                        <button type="button" id="resendOtpBtn" disabled>Resend OTP</button>
                    </div>
                    <button type="button" class="btn btn-primary" id="verifyOtpBtn">Verify OTP</button>
                </div>

                <div id="result" class="mt-4"></div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // --- Aadhar Verification Logic ---
        const aadharForm = document.getElementById('aadharForm');
        const sendOtpBtn = document.getElementById('sendOtpBtn');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const otpSection = document.getElementById('otpSection');
        const verifyOtpBtn = document.getElementById('verifyOtpBtn');
        const resendOtpBtn = document.getElementById('resendOtpBtn');
        const timerDiv = document.getElementById('timer');
        const resultDiv = document.getElementById('result');
        let timerInterval;
        let timeLeft = 30;

        function showLoading(show) {
            loadingSpinner.style.display = show ? 'block' : 'none';
        }

        function showOtpSection(show) {
            otpSection.classList.toggle('show', show);
        }

        function startTimer() {
            timeLeft = 30;
            resendOtpBtn.disabled = true;
            timerDiv.textContent = `Time remaining: ${timeLeft}s`;
            timerInterval = setInterval(() => {
                timeLeft--;
                timerDiv.textContent = `Time remaining: ${timeLeft}s`;
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    resendOtpBtn.disabled = false;
                    timerDiv.textContent = 'Didn\'t receive OTP?';
                }
            }, 1000);
        }

        function formatAadharData(data) {
            if (!data || !data.data) return '<div class="alert alert-warning">No data found.</div>';

            // Extract aadhaar data from the response
            let aadhaar = null;
            if (data.data && data.data.data && data.data.data.aadhaar_data) {
                aadhaar = data.data.data.aadhaar_data;
            } else if (data.data && data.data.aadhaar_data) {
                aadhaar = data.data.aadhaar_data;
            }

            if (!aadhaar) return '<div class="alert alert-warning">No Aadhar data found.</div>';

            // Mask mobile number
            let maskedMobile = '-';
            if (aadhaar.mobile && aadhaar.mobile.length >= 4) {
                maskedMobile = 'XXXXXX' + aadhaar.mobile.slice(-4);
            }

            let html = `
                <div class="card shadow-lg border-0" style="max-width: 800px; margin: 0 auto; border-radius: 16px; overflow: hidden;">
